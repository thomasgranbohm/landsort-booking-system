{
	"name": "booking-server",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"author": "thomasgranbohm",
	"scripts": {
		"watch": "tsc -w",
		"dev": "nodemon dist/index.js",
		"create:migration": "npx mikro-orm migration:create",
		"reset": "rm -rf dist/* ; rm ./src/migrations/* ; sudo -u postgres dropdb landsort-booking ; sudo -u postgres createdb landsort-booking ; yarn create:migration ; yarn watch",
		"reset:db": "sudo -u postgres dropdb landsort-booking && sudo -u postgres createdb landsort-booking",
		"create:db": "sudo -u postgres createdb landsort-booking"
	},
	"dependencies": {
		"@mikro-orm/cli": "^4.0.0-alpha.0",
		"@mikro-orm/core": "^4.0.0-alpha.0",
		"@mikro-orm/migrations": "^4.0.0-alpha.0",
		"@mikro-orm/postgresql": "^4.0.0-alpha.0",
		"apollo-server-express": "^2.17.0",
		"class-validator": "^0.12.2",
		"express": "^4.17.1",
		"graphql": "^15.3.0",
		"nanoid": "^3.1.12",
		"pg": "^8.3.3",
		"reflect-metadata": "^0.1.13",
		"ts-node": "^9.0.0",
		"type-graphql": "^1.0.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.8",
		"@types/node": "^14.6.2",
		"nodemon": "^2.0.4",
		"typescript": "^4.0.2"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/mikro-orm.config.ts",
			"./dist/mikro-orm.config.js"
		]
	}
}