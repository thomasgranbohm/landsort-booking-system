		"typeorm": "^0.2.25"
	},
	"devDependencies": {
		"@types/express": "^4.17.8",
		"@types/node": "^14.6.2",
		"nodemon": "^2.0.4",
		"typescript": "^4.0.2"
	},
	"mikro-orm": {
		"useTsNode": true,
